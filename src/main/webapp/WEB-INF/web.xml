<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>MyFirstLogin</servlet-name>
  	<display-name>MyFirstLogin</display-name>
  	<servlet-class>com.bridgelabz.login.LoginServlet</servlet-class>
  	<init-param>
  	<param-name>user</param-name>
  	<param-value>[A-Z][a-z]{2,}</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MyFirstLogin</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
		<welcome-file>Login.html</welcome-file>
	</welcome-file-list>
</web-app>
